{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/",
    "types": ["node", "@types/css-modules/index.d.ts"],
    "declaration": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "include": ["declaration.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ]
}
